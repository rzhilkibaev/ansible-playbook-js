# {{ ansible_managed }}

[Unit]
Description=Jenkins Continuous Integration Server

[Service]
User=jenkins
Group=jenkins
Restart=always
Environment=JENKINS_HOME={{ jenkins_home }}
# jvm exits with this status code upon graceful termination
SuccessExitStatus=143
ExecStart={{ jenkins_java }} {{ jenkins_java_args }} -jar {{ jenkins_war }}/jenkins-{{ jenkins_version }}.war --webroot={{ jenkins_webroot }} --httpPort={{ jenkins_http_port }} --ajp13Port=-1

[Install]
WantedBy=multi-user.target